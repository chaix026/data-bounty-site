---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact | Data Bounty LLC" description="Get in touch with Data Bounty LLC for your data science and economic consulting needs.">
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4 max-w-4xl">
			<h1 class="text-4xl font-bold text-brand-maroon text-center mb-8">Get In Touch</h1>
			
			<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
				<!-- Contact Info -->
				<div>
					<h2 class="text-2xl font-bold text-gray-800 mb-6">Contact Information</h2>
					<div class="space-y-6">
						<div class="flex items-start gap-4">
							<div class="text-brand-gold mt-1">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
								</svg>
							</div>
							<div>
								<div class="font-bold text-gray-800">Email</div>
								<a href="mailto:contact@databounty.llc" class="text-brand-maroon hover:underline">contact@databounty.llc</a>
							</div>
						</div>

						<div class="flex items-start gap-4">
							<div class="text-brand-gold mt-1">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
								</svg>
							</div>
							<div>
								<div class="font-bold text-gray-800">Location</div>
								<p class="text-gray-600">Owatonna, MN</p>
								<p class="text-sm text-gray-500">(Serving Clients Globally)</p>
							</div>
						</div>

						<div class="flex items-start gap-4">
							<div class="text-brand-gold mt-1">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
								</svg>
							</div>
							<div>
								<div class="font-bold text-gray-800">Social</div>
								<div class="flex gap-4 mt-1">
									<a href="#" class="text-gray-500 hover:text-brand-maroon transition-colors">LinkedIn</a>
									<a href="#" class="text-gray-500 hover:text-brand-maroon transition-colors">GitHub</a>
								</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Contact Form -->
				<div class="bg-zinc-50 p-6 rounded-lg shadow-sm border border-gray-100">
					<form name="contact" method="POST" data-netlify="true">
						<div class="space-y-4">
							<div>
								<label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
								<input type="text" id="name" name="name" class="w-full rounded-md border-gray-300 shadow-sm focus:border-brand-gold focus:ring focus:ring-brand-gold focus:ring-opacity-50 px-4 py-2 border" required />
							</div>
							
							<div>
								<label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
								<input type="email" id="email" name="email" class="w-full rounded-md border-gray-300 shadow-sm focus:border-brand-gold focus:ring focus:ring-brand-gold focus:ring-opacity-50 px-4 py-2 border" required />
							</div>

							<div>
                                <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                                <textarea id="message" name="message" rows="4" class="w-full rounded-md border-gray-300 shadow-sm focus:border-brand-gold focus:ring focus:ring-brand-gold focus:ring-opacity-50 px-4 py-2 border" required></textarea>
                            </div>

                            <button type="submit" class="w-full bg-brand-maroon text-white font-bold py-2 px-4 rounded hover:bg-opacity-90 transition-colors">
                                Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</Layout>
