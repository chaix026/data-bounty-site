---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="What We Do"
    subtitle="Comprehensive data analytics, causal inference, and economic consulting services."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Marketing Science & Attribution"
    columns={2}
    items={[
      {
        title: 'Marketing Mix Modeling (MMM)',
        description: 'Optimize marketing spend and understand the impact of various channels on sales.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Geo-Experimentation',
        description: 'Time-Based Regression (TBR-MM) and Synthetic Control methods for measuring incremental lift.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'ROAS Optimization',
        description: 'Maximize Return on Ad Spend through rigorous causal analysis.',
        icon: 'tabler:currency-dollar',
      },
      {
        title: 'Customer Segmentation',
        description: 'Advanced segmentation and lift analysis to target the right audience.',
        icon: 'tabler:users',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Applied Economics & Policy Analysis"
    columns={2}
    isDark={false}
    items={[
      {
        title: 'Impact Assessment',
        description: 'Program evaluation and causal impact analysis for policy decisions.',
        icon: 'tabler:gavel',
      },
      {
        title: 'Risk Management Modeling',
        description: 'Quantify and mitigate risks through robust economic models.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Cost-Benefit Analysis',
        description: 'Tradeoff analysis to inform strategic investment decisions.',
        icon: 'tabler:scale',
      },
      {
        title: 'Supply Chain Insights',
        description: 'Agribusiness and supply chain optimization using economic principles.',
        icon: 'tabler:truck-delivery',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Data Science & Engineering"
    columns={2}
    items={[
      {
        title: 'Spatial Data Analytics',
        description: 'Advanced visualization and analysis of geospatial data.',
        icon: 'tabler:map',
      },
      {
        title: 'Bayesian Modeling',
        description: 'Structural time-series modeling for complex forecasting.',
        icon: 'tabler:chart-dots',
      },
      {
        title: 'Pipeline Automation',
        description: 'Robust data pipelines using Python, R, and SQL.',
        icon: 'tabler:code',
      },
      {
        title: 'Big Data Processing',
        description: 'Scalable solutions for processing large datasets and supercomputing.',
        icon: 'tabler:server',
      },
    ]}
  />
</Layout>
